@model BestInja.Model.Vendor.AddVendorModel
<div class="row">
    <div class="col-md-12">
        <h2 class="RegisterPageTitle">اطلاعات تماس</h2>
    </div>

    <div class="col-md-6">
        <div class="FormItemSection">
            <label for="Title">نام مکان</label>
            <input data-val-required="لطفا نام مکان را وارد نمایید" data-val="true" name="Title" id="Title" type="text" class="myInput">
        </div>
        <span class="text-danger field-validation-valid"
              data-valmsg-for="Title" data-valmsg-replace="true"></span>

    </div>

    <div class="col-md-6">
        <div class="FormItemSection">
            <label for="PhoneNumber">تلفن ثابت</label>
            <input data-val-required="لطفا تلفن ثابت را وارد نمایید" data-val="true" name="PhoneNumber" id="PhoneNumber" type="text" class="myInput">
        </div>
        <span class="text-danger field-validation-valid"
              data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>

    </div>
    <div id="facilities">

    </div>

</div>