    <script src='https://demo.cedarmaps.com/websdk/demos/js/L.Control.Locate.min.js'></script>
    <script src='https://demo.cedarmaps.com/websdk/demos/js/auto-complete.js'></script>
    <script src="~/Scripts/Vendor/AddVendor.js"></script>
    <script src="http://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    
    

}
