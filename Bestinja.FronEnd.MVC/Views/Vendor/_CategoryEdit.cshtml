@using BestInja.Model.Vendor
@model BestInja.Model.Vendor.EditVendorDto

<div class="row">
    <div class="col-md-12">
        <h2 class="RegisterPageTitle">دسته بندی خود را انتخاب کنید</h2>
    </div>

    <div class="col-md-3">
        <div id="categoryContent" class="FormItemSection">
            <label for="category">دسته</label>
            
            @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.CategoryList, "Id", "Title", 10), "انتخاب دسته",
                new { @class = "lstSelect NiceSelectList required", name = "category", id = "category", onchange = "selectCategory(this);" })

            <span class="text-danger field-validation-valid"
                  data-valmsg-for="category" data-valmsg-replace="true"></span>
            </div>
    </div>
    <div class="col-md-3 type hidden">
        <div class="FormItemSection">
            <label for="subcategory">نوع</label>
       
            @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.CategoryList, "Id", "Title", 10), "انتخاب دسته",
                new { @class = "lstSelect NiceSelectList required", name = "category", id = "category", onchange = "selectCategory(this);" })

            
            <span class="text-danger field-validation-valid"
                  data-valmsg-for="category" data-valmsg-replace="true"></span>

        </div>

    </div>
</div>

